<button onclick="enterSite()">Proceed</button>
</div>

<!-- STUDENTS -->
<div id="students">
<div class="grid" id="grid"></div>
</div>

<script>

function enterSite(){
document.getElementById("intro").style.display="none";
document.getElementById("students").style.display="block";
}

/* -------- 88 STUDENTS -------- */

const students=[];

for(let i=1;i<=88;i++){
students.push({
name:"Student "+i,
address:"Address",
photo:"https://via.placeholder.com/150",
whatsapp:"#",
telegram:"#",
facebook:"#"
});
}

const grid=document.getElementById("grid");

students.forEach(s=>{
const card=document.createElement("div");
card.className="card";

card.innerHTML=`
<div class="inner">
<div class="front">
<img src="${s.photo}">
<h3>${s.name}</h3>
<p>${s.address}</p>
</div>

<div class="back">
<h3>Contact</h3>
<a href="${s.whatsapp}">WhatsApp</a>
<a href="${s.telegram}">Telegram</a>
<a href="${s.facebook}">Facebook</a>
</div>
</div>
`;

card.onclick=()=>card.classList.toggle("flipped");

grid.appendChild(card);
});

</script>

</body>
